<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Theme for the Preferences -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored" />

    <!-- mint theme -->
    <style name="Theme.App.Mint" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/mintColorPrimary</item>
        <item name="colorPrimaryDark">@color/mintColorPrimaryDark</item>
        <item name="colorAccent">@color/mintColorAccent</item>
    </style>
    <!-- rose theme -->
    <style name="Theme.App.Rose" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/roseColorPrimary</item>
        <item name="colorPrimaryDark">@color/roseColorPrimaryDark</item>
        <item name="colorAccent">@color/roseColorAccent</item>
    </style>
    <style name="Theme.App.Sky" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/skyColorPrimary</item>
        <item name="colorPrimaryDark">@color/skyColorPrimaryDark</item>
        <item name="colorAccent">@color/skyColorAccent</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <!-- about dialog -->
    <style name="TextAbout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/about_text_color</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="TextAboutLarge" parent="TextAbout">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="TextAboutSmall" parent="TextAbout">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- stopwatch -->
    <style name="ButtonStopwatch" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="MySpinnerLook" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">30sp</item>
    </style>
    <!-- project count -->
    <style name="TextProjectCount" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="SpinnerProjectCount" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
