<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- image it left of everything else -->
    <ImageView
        android:id="@+id/list_item_folder_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:contentDescription="@string/photo"
        android:scaleType="centerCrop"/>
    <!--first line, title right of image -->
    <TextView android:id="@+id/list_item_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_folder_icon"
        android:textStyle="bold"
        android:textColor="@color/knitting_list_item_title"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"/>
</RelativeLayout>