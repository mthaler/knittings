<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph_details"
    app:startDestination="@id/knittingDetailsFragment">
    <fragment
        android:id="@+id/knittingDetailsFragment"
        android:name="com.mthaler.knittings.details.KnittingDetailsFragment"
        android:label="KnittingDetailsFragment" >
        <action
            android:id="@+id/action_knittingDetailsFragment_to_editKnittingDetailsFragment"
            app:destination="@id/editKnittingDetailsFragment" />
        <argument
            android:name="com.mthaler.knittings.KNITTING_ID"
            app:argType="long"
            android:defaultValue="-1L" />
        <argument
            android:name="com.mthaler.knittings.edit_only"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/editKnittingDetailsFragment"
        android:name="com.mthaler.knittings.details.EditKnittingDetailsFragment"
        android:label="EditKnittingDetailsFragment" >
        <argument
            android:name="com.mthaler.knittings.KNITTING_ID"
            app:argType="long"
            android:defaultValue="-1L" />
        <argument
            android:name="com.mthaler.knittings.edit_only"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>
</navigation>
